{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run current TS file",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}